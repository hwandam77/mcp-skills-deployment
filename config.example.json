{
  "mcpProxy": {
    "hierarchyPath": "/path/to/lazy-mcp/testdata/mcp_hierarchy",
    "options": {
      "lazyLoad": true,
      "serverNamespace": false,
      "toolPrefix": ""
    }
  },
  "mcpServers": {
    "filesystem": {
      "transportType": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "--allowed-directories",
        "/path/to/allowed/directory"
      ],
      "options": {
        "lazyLoad": false,
        "preload": true
      }
    },
    "github": {
      "transportType": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "options": {
        "lazyLoad": true,
        "preload": false
      }
    },
    "ssh": {
      "transportType": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-ssh"
      ],
      "options": {
        "lazyLoad": false,
        "preload": true
      }
    },
    "slack": {
      "transportType": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-slack"
      ],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_TEAM_ID": "${SLACK_TEAM_ID}"
      },
      "options": {
        "lazyLoad": true,
        "preload": false
      }
    },
    "postgres": {
      "transportType": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres"
      ],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${POSTGRES_CONNECTION_STRING}"
      },
      "options": {
        "lazyLoad": true,
        "preload": false
      }
    },
    "brave-search": {
      "transportType": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "options": {
        "lazyLoad": true,
        "preload": false
      }
    },
    "context7": {
      "transportType": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@context7/mcp-server"
      ],
      "options": {
        "lazyLoad": false,
        "preload": true
      }
    }
  }
}
